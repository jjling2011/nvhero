{
  "log": {
    "loglevel": "warning"
  },
  "outbounds": [
    {
      "tag": "local",
      "protocol": "freedom",
      "settings": {
        "redirect": "127.0.0.1:22"
      }
    },
    {
      "tag": "remote",
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "proxy address",
            "port": 443,
            "users": [
              {
                "id": "uuid"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "wsSettings": {
          "path": "/v2rayserver"
        }
      }
    }
  ],
  "routing": {
    "rules": [
      {
        "type": "field",
        "inboundTag": [
          "bridge"
        ],
        "domain": [
          "full:abc.revers.test"
        ],
        "outboundTag": "remote"
      },
      {
        "type": "field",
        "inboundTag": [
          "bridge"
        ],
        "outboundTag": "local"
      }
    ]
  },
  "reverse": {
    "bridges": [
      {
        "tag": "bridge",
        "domain": "abc.revers.test"
      }
    ]
  }
}